<script>
    $(".ctrlbtn").click(function (e) {

        $(".modalLoader").css("display", "block");
        var op = $(this).data("type");

        setTimeout(function () {
            CommonAjax('/M1/PHSC02/Execute', "GET", false, "application/json", false, GetResponse, "",
                {

                    FromDate: $("#txtDate").val(),
                    Shift: $("#txtShift").val(),
                    OperationType: op

                });
            $(".modalLoader").hide();
        }, 10)


    })

    function Refresh() {
        CommonAjax('/M1/PHSC02/Execute', "GET", false, "application/json", false, GetResponse, "",
            {

                FromDate: $("#txtDate").val(),
                Shift: $("#txtShift").val(),
                OperationType: op

            });
    }

    $(document).on("change", ".ammonia", function (e) {
        debugger;
        var name = $(this).attr("id");
        var val = $(this).val();
        var op = $(this).data("operation");
        var type = $(this).attr("type");

        $(".modalLoader").css("display", "block");

        setTimeout(function () {
            CommonAjax('/M1/PHSC02/PostData', "GET", false, "application/json", false, PostResponse, "",
                {
                    Input_Name: name,
                    Input_Value: val,
                    OperationType: op,
                    FromDate: $("#txtDate").val(),
                    Shift: $("#txtShift").val(),
                    InputType:type,


                });
            $(".modalLoader").hide();
        }, 10)

        Refresh();
    })
